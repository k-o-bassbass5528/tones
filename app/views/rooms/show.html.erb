<div class="cover-show">
    <div class="container d-flex flex-column align-items-center">
        <div class="row mt-5 position-relative">
            <div class="background-image"></div>
            <div class="content-overlay">
                <% @entries.each do |e| %>
                    <% if @myUserId != e.user.id %>
                        <h1 class="text"><%= e.user.name %>さんとのトークルーム</h1>
                    <% end %>
                <% end %>
                <div class="d-flex justify-content-center">
                    <%= link_to "ユーザー一覧に戻る", users_path, class: "btn btn-success" %>
                </div>
            </div>
        </div>
    </div>
    <div class="container mt-5">
        <div class="row">
            <% if @messages.present? %>
                <% @messages.each do |m| %>
                    <div class="message-container">
                        <p class="message-user"><%= m.user.name %></p>
                        <p class="message-content"><%= m.message %></p>
                    </div>
                <% end %>
            <% end %>
        </div>
        <div class="row mt-3">
            <%= form_with model: [@room, @message], local: true do |f| %>
                <div class="d-flex justify-content-center">
                    <%= f.text_area :message, placeholder: "メッセージを入力してください", class: "form-control w-50" %>
                    <%= f.hidden_field :room_id, value: @room.id %>
                    <%= f.submit "メッセージを送信", class: "btn btn-primary ms-2" %>
                </div>
            <% end %>
        </div>
    </div>
</div>