<div class="cover-user-edit">
    <div class="container d-flex flex-column align-items-center">
        <div class="row mt-5">
            <h1 class="font-weight-normal">プロフィール編集</h1>
        </div>
        <div class="row mt-5">
            <%= form_with model: @user, local:true do |f| %>
                <div class="form-group">
                    <label class="form-label">名前</label>
                    <%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"名前(20文字以下)", class: "form-control", maxlength: 20 %>
                </div>
                <div class="form-group">
                    <label class="form-label">プロフィール画像</label><br>
                    <%= profile_image_for(@user, size: "100x100", css_class: "mb-3 profile-img") %><br>
                    <%= f.file_field :profile_image %>
                </div>
                <div class="form-group">
                    <label class="form-label">プロフィール</label>
                    <%= f.text_field :profile, class: "form-control" %><br>
                </div>
                <%= f.submit '保存する', class: "btn btn-success" %>
                <%= link_to '退会する', user_path(current_user.id), data: { turbo_method: :delete, turbo_confirm: "退会すると、すべての投稿やコメント等が削除され、この操作は取り消せません。本当に退会しますか？"}, class: "btn btn-danger" %><br>
            <% end %>
        </div>
    </div>
</div>