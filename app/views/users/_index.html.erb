<div class="row mt-5 w-50">
    <% users.each do |user| %>
        <div class="one-post card mt-3">
            <%= link_to user_path(user) do %>
                <div class="d-flex">
                    <%= profile_image_for(user, size: "50x50", css_class: "mt-3 profile-img") %>
                    <p class="caption h4 mt-4"><%= user.name %></p>
                </div>
                <p class="caption"><%= "#{user.posts.published.count} 投稿" %></p>
            <% end %>
        </div>
    <% end %>
</div>
<%= paginate users %>