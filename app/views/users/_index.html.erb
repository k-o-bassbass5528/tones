<div class="row mt-5 mx-auto" style="width: 80%;">
  <% users.each do |user| %>
    <div class="one-post card mt-3">
      <%= link_to user_path(user), class: "user-card-link" do %>
        <div class="d-flex">
          <%= profile_image_for(user, size: "50x50", css_class: "mt-3 profile-img") %>
          <div class="ms-3 mt-3 user-text-box">
            <p class="user-caption h4 mb-1 user-ellipsis user-name"><%= user.name %></p><br>
            <p class="user-caption h6 user-ellipsis user-profile"><%= user.profile %></p>
          </div>
        </div>
        <p class="user-caption ms-3 mb-2 user-posts"><%= "#{user.posts.published.count} 投稿" %></p>
      <% end %>
    </div>
  <% end %>
</div>
<%= paginate users %>