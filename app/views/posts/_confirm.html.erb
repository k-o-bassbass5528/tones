                    <div class="card">
                        <div class="card-body">
                            <div class="d-flex align-items-center">
                                <%= link_to user_path(post.user), class: "text-decoration-none" do %>
                                    <%= attachment_image_tag post.user, :profile_image, size: '40x40', fallback: "no_image.svg", class: "rounded-circle" %>
                                    <span class="ml-2 text-dark"><%= post.user.name %></span>
                                <% end %>
                            </div>
                            <div class="mt-3">
                                <% if post.images.attached? %>
                                    <%= image_tag post.images.first, format: 'jpeg', size: "300x200", class: "img-fluid" %>
                                <% end %>
                            </div>
                        </div>
                    </div> 