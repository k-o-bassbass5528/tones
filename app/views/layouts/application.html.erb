<!DOCTYPE html>
<html>
  <head>
    <title>Tones</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>

  <body class="<%= content_for?(:body_class) ? yield(:body_class) : '' %>">
    <% if user_signed_in? %>
      <aside class="sidebar">
        <!-- 上部：マイページとロゴ -->
        <div class="sidebar-top">
          <%= link_to user_path(current_user.id), class: "profile-link d-block mb-3" do %>
            <%= profile_image_for(current_user, size: "50x50") %>
          <% end %>
          <%= link_to posts_path, id: "head-top", class: "d-block mb-4" do %>
            <%= image_tag 'tones_big_logo.jpg', size: "120x25" %>
          <% end %>
        </div>

        <!-- 下部：各種リンク -->
        <nav class="sidebar-nav">
          <%= link_to "投稿一覧", posts_path, class: "text-white nav-link d-block mb-2" %></div>
          <%= link_to "投稿する", new_post_path, class: "text-white nav-link d-block mb-2" %></div>
          <%= link_to "下書き一覧", confirm_posts_path, class: "text-white nav-link d-block mb-2" %></div>
          <%= link_to "ユーザ一覧", users_path, class: "text-white nav-link d-block mb-2" %></div>
          <%= link_to "DM一覧", rooms_path, class: "text-white nav-link d-block mb-2" %></div>
          <%= link_to "マイページ", user_path(current_user.id), class:"text-white nav-link d-block mb-2" %></div>
          <%= link_to "ログアウト", destroy_user_session_path, data: { turbo_method: :delete }, class: "text-white nav-link d-block mb-2" %></div>
        </nav>
      </aside>
    <% end %>

    <!-- メインコンテンツ -->
    <div class="main-content">
      <%= yield %>
    </div>
  </body>
</html>